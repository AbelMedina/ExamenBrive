<div class="modal" tabindex="-1" role="dialog" id="modalValidacion">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Aviso</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h3 class="text-center">@ViewBag.Mensaje</h3>
                <br />
                <img src="~/Content/Images/check-out.png" width="374" height="301" class="center-block" />
            </div>
            <div class="modal-footer">
                @Html.ActionLink("Regresar", "GetEmpresa", "Ventas", htmlAttributes: new { @class = "btn btn-info" })
            </div>
        </div>
    </div>
</div>

<script>
    $('#modalValidacion').modal();
</script>

